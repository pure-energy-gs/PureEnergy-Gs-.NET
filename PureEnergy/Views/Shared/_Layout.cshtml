<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Energia Verde</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PureEnergy.styles.css" asp-append-version="true" />

    <style>
        body {
            display: flex;
            flex-direction: column;
            background-color: #e9f7ef; /* Fundo suave verde claro */
            color: #333;
            margin: 0;
        }

        main {
            flex: 1 0 auto;
            padding: 20px; /* Adicionando espaçamento ao conteúdo principal */
        }

        .footer {
            margin-top: auto;
            background-color: #28a745; /* Verde para o rodapé */
            color: white;
            padding: 10px 0;
        }

        .navbar {
            background-color: #f0f8e4; /* Verde claro */
        }

        .navbar-brand {
            font-weight: bold;
            color: #28a745; /* Tom de verde */
        }

        .navbar-nav .nav-link {
            color: #1e88e5; /* Azul */
            font-size: 0.9rem;
            font-weight: 500;
        }

            .navbar-nav .nav-link:hover {
                color: #0d47a1; /* Azul escuro ao passar o mouse */
            }

        .footer a {
            color: #ffffff; /* Links em branco no rodapé */
        }

            .footer a:hover {
                color: #e3f2fd; /* Azul claro ao passar o mouse */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Energia Verde</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cliente" asp-action="Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Energia Verde - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>